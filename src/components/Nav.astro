---
const navLinks = [
  { label: 'Home', href: '/' },
  { label: 'About', href: '/about' },
  { label: 'Projects', href: '/projects' },
  { label: 'Writing', href: '/writing' },
  { label: 'Contact', href: '/contact' },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-brutal-bg dark:bg-brutal-dark-bg border-b-4 border-black dark:border-white">
  <div class="max-w-7xl mx-auto px-4 md:px-8 py-4 flex justify-between items-center">
    <a href="/" class="text-2xl font-bold hover:underline">
      [YOUR NAME] <!-- ← USER INPUT NEEDED -->
    </a>
    <ul class="hidden md:flex gap-6 text-lg">
      {navLinks.map(link => (
        <li>
          <a href={link.href} class="hover:underline uppercase tracking-wider">
            {link.label}
          </a>
        </li>
      ))}
    </ul>
    <button data-dark-toggle aria-label="Toggle Dark Mode" class="p-2 border-2 border-black dark:border-white hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black transition">
      ☀/☾
    </button>
  </div>
  <!-- Mobile Menu (hamburger toggle omitted for brevity—add via JS if needed) -->
</nav>
