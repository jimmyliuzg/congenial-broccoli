---
import { getCollection } from "astro:content";

// Get latest post and project
const allPosts = await getCollection("writing");
const allProjects = await getCollection("projects");

const latestPost =
  allPosts.length > 0
    ? allPosts.sort(
        (a, b) =>
          new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
      )[0]
    : null;

const latestProject =
  allProjects.length > 0
    ? allProjects.sort(
        (a, b) =>
          new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
      )[0]
    : null;

const navLinks = [
  { label: "Home", href: "/" },
  { label: "About", href: "/about" },
  { label: "Projects", href: "/projects" },
  { label: "Writing", href: "/writing" },
  { label: "Contact", href: "/contact" },
];
---

<aside class="w-full md:w-80 lg:w-96 flex-shrink-0 pr-8 pb-16">
  <!-- Logo/Name -->
  <div class="mb-8">
    <a href="/" class="block">
      <h1
        class="text-5xl md:text-6xl font-bold text-light-text dark:text-dark-text outlined-text"
      >
        Jimmy Liu
      </h1>
    </a>
    <p class="text-sm mt-2 text-light-text dark:text-dark-text">
      A portfolio website.
    </p>
  </div>

  <!-- Navigation Links -->
  <nav class="mb-8">
    <ul class="space-y-2">
      {
        navLinks.map((link) => {
          const isActive =
            Astro.url.pathname === link.href ||
            (link.href === "/" && Astro.url.pathname === "/");
          return (
            <li>
              <a
                href={link.href}
                class={`text-sm hover:underline text-light-text dark:text-dark-text ${isActive ? "underline" : ""}`}
              >
                {link.label}
              </a>
            </li>
          );
        })
      }
    </ul>
  </nav>

  <!-- Latest Post -->
  {
    latestPost && (
      <div class="mb-6">
        <p class="text-sm text-light-text dark:text-dark-text">
          Latest post:{" "}
          <a
            href={`/writing/${latestPost.slug}`}
            class="underline font-semibold text-link dark:text-link-dark"
          >
            {latestPost.data.title}
          </a>
        </p>
      </div>
    )
  }

  <!-- Latest Project -->
  {
    latestProject && (
      <div class="mb-6">
        <p class="text-sm text-light-text dark:text-dark-text">
          Latest project:{" "}
          <a
            href={`/projects/${latestProject.slug}`}
            class="underline font-semibold text-link dark:text-link-dark"
          >
            {latestProject.data.title}
          </a>
        </p>
      </div>
    )
  }

