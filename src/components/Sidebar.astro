---
import { getCollection } from 'astro:content';

// Get latest post and project
const allPosts = await getCollection('writing');
const allProjects = await getCollection('projects');

const latestPost = allPosts.length > 0 
  ? allPosts.sort((a, b) => 
      new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
    )[0]
  : null;

const latestProject = allProjects.length > 0
  ? allProjects.sort((a, b) => 
      new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
    )[0]
  : null;

const navLinks = [
  { label: 'Home', href: '/' },
  { label: 'About', href: '/about' },
  { label: 'Projects', href: '/projects' },
  { label: 'Writing', href: '/writing' },
  { label: 'Contact', href: '/contact' },
];
---

<aside class="w-full md:w-80 lg:w-96 flex-shrink-0 pr-8 pb-16">
  <!-- Logo/Name -->
  <div class="mb-8">
    <a href="/" class="block">
      <h1 class="text-5xl md:text-6xl font-bold text-logic-text dark:text-brutal-dark-text outlined-text">
        [YOUR NAME]
      </h1>
    </a>
    <p class="text-sm mt-2 text-logic-text dark:text-brutal-dark-text">
      A portfolio website.
    </p>
  </div>

  <!-- Navigation Links -->
  <nav class="mb-8">
    <ul class="space-y-2">
      {navLinks.map(link => {
        const isActive = Astro.url.pathname === link.href || (link.href === '/' && Astro.url.pathname === '/');
        return (
          <li>
            <a 
              href={link.href} 
              class={`text-sm hover:underline text-logic-text dark:text-brutal-dark-text ${isActive ? 'underline' : ''}`}
            >
              {link.label}
            </a>
          </li>
        );
      })}
    </ul>
  </nav>

  <!-- Latest Post -->
  {latestPost && (
    <div class="mb-6">
      <p class="text-sm text-logic-text dark:text-brutal-dark-text">
        Latest post: <a href={`/writing/${latestPost.slug}`} class="underline font-semibold text-logic-link dark:text-brutal-dark-text">{latestPost.data.title}</a>
      </p>
    </div>
  )}

  <!-- Latest Project -->
  {latestProject && (
    <div class="mb-6">
      <p class="text-sm text-logic-text dark:text-brutal-dark-text">
        Latest project: <a href={`/projects/${latestProject.slug}`} class="underline font-semibold text-logic-link dark:text-brutal-dark-text">{latestProject.data.title}</a>
      </p>
    </div>
  )}

  <!-- Contact Information -->
  <div class="mb-8">
    <p class="text-sm mb-2 text-logic-text dark:text-brutal-dark-text">Contact:</p>
    <div class="flex gap-4 items-center">
      <a href="mailto:your@email.com" target="_blank" rel="noopener" aria-label="Email" class="text-lg hover:opacity-70">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
          <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
        </svg>
      </a>
      <a href="https://twitter.com/yourusername" target="_blank" rel="noopener" aria-label="Twitter" class="text-lg hover:opacity-70">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"></path>
        </svg>
      </a>
      <a href="https://github.com/yourusername" target="_blank" rel="noopener" aria-label="GitHub" class="text-lg hover:opacity-70">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23a11.509 11.509 0 013.004-.404c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
        </svg>
      </a>
    </div>
  </div>

  <!-- Contact Link -->
  <div class="mb-8">
    <p class="text-sm text-logic-text dark:text-brutal-dark-text">
      Want to get in touch? <a href="/contact" class="underline font-semibold text-logic-link dark:text-brutal-dark-text">Contact me</a>.
    </p>
  </div>

  <!-- Footer Logo (bottom of sidebar) -->
  <div class="mt-auto pt-8 border-t border-gray-300 dark:border-gray-700">
    <p class="text-xs font-mono text-logic-text dark:text-brutal-dark-text">
      [YOUR NAME]
    </p>
  </div>

  <!-- Dark Mode Toggle -->
  <button 
    data-dark-toggle 
    aria-label="Toggle Dark Mode" 
    class="mt-4 text-sm underline text-logic-text dark:text-brutal-dark-text hover:opacity-70"
  >
    Toggle Dark Mode
  </button>
</aside>
