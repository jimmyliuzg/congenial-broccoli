---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact — Jimmy Liu">
  <!-- ← USER INPUT NEEDED -->

  <div class="max-w-2xl">
    <h1 class="text-4xl font-bold mb-8 text-link dark:text-link-dark">
      Contact
    </h1>

    <p class="mb-8 text-light-text dark:text-dark-text">
      Let’s work together! Feel free to reach out for collaborations,
      opportunities, or just to say hi.
    </p>

    <!-- Optional: Simple contact form (requires backend or form service like Formspree) -->
    <form
      action="https://api.web3forms.com/submit"
      method="POST"
      class="space-y-6"
    >
      <input
        type="hidden"
        name="access_key"
        value="4bbacda3-ebdb-40f8-aa58-73e5fe1a96fb"
      />
      <div>
        <label
          for="name"
          class="block text-sm font-semibold mb-2 text-light-text dark:text-dark-text"
          >Name</label
        >
        <input
          type="text"
          id="name"
          name="name"
          required
          class="w-full p-3 border border-gray-400 dark:border-gray-600 bg-transparent text-light-text dark:text-dark-text focus:outline-none focus:border-link dark:focus:border-link-dark"
        />
      </div>
      <div>
        <label
          for="email"
          class="block text-sm font-semibold mb-2 text-light-text dark:text-dark-text"
          >Email</label
        >
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full p-3 border border-gray-400 dark:border-gray-600 bg-transparent text-light-text dark:text-dark-text focus:outline-none focus:border-link dark:focus:border-link-dark"
        />
      </div>
      <div>
        <label
          for="message"
          class="block text-sm font-semibold mb-2 text-light-text dark:text-dark-text"
          >Message</label
        >
        <textarea
          id="message"
          name="message"
          rows="6"
          required
          class="w-full p-3 border border-gray-400 dark:border-gray-600 bg-transparent text-light-text dark:text-dark-text focus:outline-none focus:border-link dark:focus:border-link-dark"
        ></textarea>
      </div>
      <button
        type="submit"
        class="px-6 py-3 bg-link dark:bg-link-dark text-white dark:text-dark-bg font-semibold hover:opacity-80 transition"
      >
        Send Message
      </button>
    </form>
  </div>
</BaseLayout>
