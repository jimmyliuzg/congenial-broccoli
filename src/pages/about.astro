---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="About — [YOUR NAME]"> <!-- ← USER INPUT NEEDED -->
  
  <section class="max-w-4xl">
    <h1 class="text-5xl font-black uppercase mb-8 border-b-4 border-black dark:border-white pb-4">About</h1>
    
    <div class="prose prose-lg dark:prose-invert font-mono max-w-none">
      <p>
        [FULL BIO — 3-4 paragraphs about your background, expertise, interests, and career journey] <!-- ← USER INPUT NEEDED -->
      </p>
      
      <h2 class="text-3xl font-bold uppercase mt-12 mb-4">Skills</h2>
      <ul class="grid grid-cols-2 gap-4">
        <li class="border-l-4 border-black dark:border-white pl-4">[SKILL 1]</li> <!-- ← USER INPUT NEEDED -->
        <li class="border-l-4 border-black dark:border-white pl-4">[SKILL 2]</li>
        <li class="border-l-4 border-black dark:border-white pl-4">[SKILL 3]</li>
        <li class="border-l-4 border-black dark:border-white pl-4">[SKILL 4]</li>
      </ul>

      <h2 class="text-3xl font-bold uppercase mt-12 mb-4">Timeline</h2>
      <ul class="space-y-6">
        <li class="border-l-4 border-black dark:border-white pl-6">
          <span class="text-sm opacity-70">[YEAR]</span> <!-- ← USER INPUT NEEDED -->
          <h3 class="text-xl font-bold">[POSITION/ACHIEVEMENT]</h3>
          <p class="text-sm">[COMPANY/INSTITUTION]</p>
        </li>
        <!-- Repeat for each timeline entry -->
      </ul>
    </div>
  </section>

</BaseLayout>
