---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="About — [YOUR NAME]"> <!-- ← USER INPUT NEEDED -->
  
  <div class="max-w-3xl">
    <h1 class="text-4xl font-bold mb-8 text-link dark:text-link-dark">About</h1>
    
    <div class="space-y-6 text-light-text dark:text-dark-text">
      <p>
        [FULL BIO — 3-4 paragraphs about your background, expertise, interests, and career journey] <!-- ← USER INPUT NEEDED -->
      </p>
      
      <h2 class="text-2xl font-bold mt-12 mb-4 text-link dark:text-link-dark">Skills</h2>
      <ul class="grid grid-cols-2 gap-3">
        <li class="pl-2">[SKILL 1]</li> <!-- ← USER INPUT NEEDED -->
        <li class="pl-2">[SKILL 2]</li>
        <li class="pl-2">[SKILL 3]</li>
        <li class="pl-2">[SKILL 4]</li>
      </ul>

      <h2 class="text-2xl font-bold mt-12 mb-4 text-link dark:text-link-dark">Timeline</h2>
      <ul class="space-y-4">
        <li class="pl-2">
          <span class="text-sm opacity-70">[YEAR]</span> <!-- ← USER INPUT NEEDED -->
          <h3 class="text-lg font-semibold mt-1">[POSITION/ACHIEVEMENT]</h3>
          <p class="text-sm opacity-80">[COMPANY/INSTITUTION]</p>
        </li>
        <!-- Repeat for each timeline entry -->
      </ul>
    </div>
  </div>

</BaseLayout>
