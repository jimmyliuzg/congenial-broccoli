---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('writing');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={`${post.data.title} — Writing`}>
  
  <article class="max-w-3xl">
    <h1 class="text-4xl font-bold mb-4 text-link dark:text-link-dark">
      {post.data.title}
    </h1>
    <time class="text-sm opacity-70 mb-8 block text-light-text dark:text-dark-text">
      {new Date(post.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
    </time>
    
    <div class="prose prose-lg dark:prose-invert max-w-none text-light-text dark:text-dark-text">
      <Content />
    </div>

    <div class="mt-12 pt-8 border-t border-gray-300 dark:border-gray-700">
      <a href="/writing" class="text-sm underline text-link dark:text-link-dark">← Back to Writings</a>
    </div>
  </article>

</BaseLayout>
